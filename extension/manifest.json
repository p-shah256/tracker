{
  "manifest_version": 3,
  "name": "Discord HTML Sender",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://discord.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Send HTML to Discord"
  },
  "web_accessible_resources": [
    {
      "resources": ["config.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
